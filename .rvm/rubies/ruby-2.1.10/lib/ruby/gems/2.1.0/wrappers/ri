  [[ -s "/Users/elliot/.rvm/gems/ruby-2.1.10@global/environment" ]]
then
  source "/Users/elliot/.rvm/gems/ruby-2.1.10@global/environment"
  exec ri "$@"
else
  echo "ERROR: Missing RVM environment file: '/Users/elliot/.rvm/gems/ruby-2.1.10@global/environment'" >&2
  exit 1
fi
